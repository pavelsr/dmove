#!/bin/bash
# Run it with sudo

# Default installation set:
set=(move-volume move-db dmove-copy-id dmove-config dmove-nginx-proxy)

for item in ${set[*]}
do
    wget -q https://raw.githubusercontent.com/pavelsr/dmove/master/$item -O /usr/local/bin/$item
    chmod +x /usr/local/bin/$item
done

dmove-config
dmove-copy-id
echo "Setup complete! Do not forget to dmove-copy-id if you updated config"
